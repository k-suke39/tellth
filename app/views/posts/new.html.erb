<section class="l-content-fixed section">
  <header class="section-header">
    <h2 class="section-title">編集</h2>
    <p class="section-subtitle">Edit</p>
  </header>
  <div class="section-form">
    <%= form_with url: posts_path, class: "form-simple" do |f| %>
      <%= f.label "タイトル", class: "form-label"%>
      <p class="form-input">
        <%= f.text_field :title, placeholder: "タイトル"%>
      </p>
      <%= f.label "質問内容", class: "form-label"%>
      <p class="form-input">
        <%= f.text_area :content, placeholder: "健康に関する悩み"%>
      </p>
      <p class="form-btn-holder">
        <%= f.button "作成", type: "submit", class: "btn"%>
      </p>
    <% end %>
  </div>
<section>