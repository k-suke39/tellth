<section class="l-content-fixed section">
  <header class="section-header">
    <h2 class="section-title">ログイン</h2>
    <p class="section-subtitle">Login</p>
  </header>
  <div class="section-form">
    <%= form_with url: "/login", method: :post, class: "form-simple" do |f| %>
      <%= f.label "メールアドレス", class: "form-label"%>
      <p class="form-input">
        <%= f.text_field :email, placeholder: "sample@sample.com"%>
      </p>
      <%= f.label "パスワード", class: "form-label"%>
      <p class="form-input">
        <%= f.text_field :password%>
      </p>
      <p class="form-btn-holder">
        <%= f.button "Login", type: "submit", class: "btn"%>
      </p>
    <% end %>
  </div>
<section>